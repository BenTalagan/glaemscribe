    \endif

    {L6_NN}   === (j,J)
    {_L6_NN_} === CIRTH_40 \** TODO : DOCUMENT ADD OPTION WITH alternative CIRTH_39 **\
    {L6_NN}   --> {_L6_NN_}

    \** ------------- **\
    {L7}    === r        * ɹ        * l
    {_L7_}  === CIRTH_29 * CIRTH_30 * CIRTH_31     \** TODO : DOCUMENT CIRTH_30 **\
    {L7}    --> {_L7_}

    \** ------------- **\

    \if "cirth_for_s == USE_CIRTH_34"
      {_S_} === CIRTH_34
    \else
      {_S_} === CIRTH_35
    \endif

    {L8}   === s * z
    {_L8_} === {_S_} * CIRTH_36
    {L8}   --> {_L8_}
    \if "nasal_consonants == NASAL_CONSONANTS_USE_CIRCUMFLEX"
      {L8_NASAL}   === ns * nz
