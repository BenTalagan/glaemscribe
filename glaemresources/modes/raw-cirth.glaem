\language "Raw Cirth"
\writing  "Cirth"
\mode     "Raw Cirth"
\version  "0.0.1"
\authors  "Talagan (Benjamin Babut)"

\world      arda
\invention  experimental

\metamode true

\charset  cirth_ds true

